[gpg]
    program = gpg

[user]
    email = egemenkopuz@hotmail.com
    name = Egemen Kopuz

[init]
    defaultBranch = main

[commit]
    gpgsign = false

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = true

[pull]
    ff = only

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
